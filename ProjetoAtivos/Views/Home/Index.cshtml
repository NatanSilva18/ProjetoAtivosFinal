    <div class="col-lg-3">
        <div class="card bg-warning text-white mb-4" data-toggle="tooltip" data-placement="top" title="Transferencias Aguardando Aprovação do Gestor">
            <div class="card-body" id="txtAguardando"></div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="#" data-toggle="modal" data-target="#">Ver Detalhes</a>
                <div class="small text-white"><svg class="svg-inline--fa fa-angle-right fa-w-8" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg=""><path fill="currentColor" d="M224.3 273l-136 136c-9.4 9.4-24.6 9.4-33.9 0l-22.6-22.6c-9.4-9.4-9.4-24.6 0-33.9l96.4-96.4-96.4-96.4c-9.4-9.4-9.4-24.6 0-33.9L54.3 103c9.4-9.4 24.6-9.4 33.9 0l136 136c9.5 9.4 9.5 24.6.1 34z"></path></svg><!-- <i class="fas fa-angle-right"></i> --></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="card bg-success text-white mb-4" data-toggle="tooltip" data-placement="top" title="Transferencias Aprovadas">
            <div class="card-body" id="txtAprovado"></div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="#" data-toggle="modal" data-target="#">Ver Detalhes</a>
                <div class="small text-white"><svg class="svg-inline--fa fa-angle-right fa-w-8" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="angle-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" data-fa-i2svg=""><path fill="currentColor" d="M224.3 273l-136 136c-9.4 9.4-24.6 9.4-33.9 0l-22.6-22.6c-9.4-9.4-9.4-24.6 0-33.9l96.4-96.4-96.4-96.4c-9.4-9.4-9.4-24.6 0-33.9L54.3 103c9.4-9.4 24.6-9.4 33.9 0l136 136c9.5 9.4 9.5 24.6.1 34z"></path></svg><!-- <i class="fas fa-angle-right"></i> --></div>
            </div>
        </div>
    </div>
</div>
<div class="row form-group">
    <div class="col-lg-6 flip-container" id="mycard">
        <div class="card mb-4 shadow p-3 mb-5 bg-white rounded flipper">
            <div class="front" id="front" style="display:normal">
                <div class="card-header">
                    <i class="fa fa-dollar-sign"></i>
                    <span><b>Regional x Ativos</b></span>
                    <a role="button" href="javascript: GerarPdf('#mycard');"><i class="fas fa-file-pdf float-right"></i></a>
                    <a role="button" href="javascript: ExibirGrafico('gfregionalativos', 'btnExibirAtivos');"><i id="btnExibirAtivos" class="fas fa-eye-slash float-right" style="padding-right:10px;"></i></a>
                    <a role="button" href="javascript: ViraGrafico();"><i class="fas fa-arrow-right float-right" style="padding-right:10px;"></i></a>
                </div>
                <div class="card-body" id="gfregionalativos">
                    <canvas id="ativosregional" width="350" height="150" class="chartjs-render-monitor" style="display: block; height: 150px; width: 250px;"></canvas>
                </div>
            </div>
            <div class="back" id="back" style="display:none">
                <div class="card-header">
                    <i class="fa fa-dollar-sign"></i>
                    <span><b>Regional x Valor Acumulado</b></span>
                    <a role="button" href="javascript: GerarPdf('#mycard');"><i class="fas fa-file-pdf float-right"></i></a>
                    <a role="button" href="javascript: ExibirGrafico('gfregionalfaturamento', 'btnExibirFaturamentoRegional');"><i id="btnExibirFaturamentoRegional" class="fas fa-eye-slash float-right" style="padding-right:10px;"></i></a>
                    <a role="button" href="javascript: ViraGrafico();"><i class="fas fa-arrow-left float-right" style="padding-right:10px;"></i></a>
                </div>
                <div class="card-body" id="gfregionalfaturamento">
                    <canvas id="faturamentoregional" width="350" height="150" class="chartjs-render-monitor" style="display: block; height: 150px; width: 250px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 col-md-6 col-xl-6" id="graficoImagemDiv">
        <div class="card mb-4 shadow p-3 mb-5 bg-white rounded">
            <div class="card-header">
                <i class="fa fa-sort-numeric-up"></i>
                <span><b>Imagem x Ativos</b></span>
                <a role="button" href="#" data-toggle="modal" data-target="#imagens" title="Relatorio Imagens"><i class="fas fa-table float-right"></i></a>
                <a role="button" href="javascript: GerarPdf('#graficoImagemDiv');" title="Gerar Pdf"><i class="fas fa-file-pdf float-right" style="padding-right:10px;"></i></a>
                <a role="button" href="javascript: ExibirGrafico('gfImagemAtivos', 'btnExibirImagem');" title="Ocultar/Exibir"><i id="btnExibirImagem" class="fas fa-eye-slash float-right" style="padding-right:10px;"></i></a>
            </div>
            <div class="card-body" id="gfImagemAtivos">
                <canvas id="imagemAtivos" width="350" height="150" class="chartjs-render-monitor" style="display: block; height: 150px; width: 250px;"></canvas>
            </div>
        </div>
    </div>
</div>

@*Detalhes ativos*@
<div id="somaAtivos" class="modal fade bd-example-modal-lg" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="novoProdLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ativos Parebem</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="form-group">
                        <div class="card mb-4">
                            <div class="card-body">
                                <form action="javascript: ObterValores();" method="post">
                                    <div class="row">
                                        <div class="col-lg-5 col-md-5 col-xl-5">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <div class="input-group-text" style="background-color: #FFF"><i class="fas fa-building"></i></div>
                                                    </div>
                                                    <select id="cbbRegiao" name="cbbRegiao " data-live-search="true" class="form-control selectpicker" required onchange="CarregarFiliais(this.value);">
                                                        <option value="" selected>Região</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 col-md-5 col-xl-5">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <div class="input-group-text" style="background-color: #FFF"><i class="fas fa-building"></i></div>
                                                    </div>
                                                    <select id="cbbFilial" name="cbbFilial" class="form-control selectpicker" data-live-search="true">
                                                        <option value="0" selected>Filiais Pertecente a Região Selecionado</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-2 col-md-2 col-xl-2 d-inline">
                                            <button type="submit" id="btnPesquisar" name="btnPesquisar" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Pesquisar"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="tableValorAtivos" class="table table-hover display" style="width:100%"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

